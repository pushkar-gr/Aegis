# Build Stage
FROM rust:1.92-slim-bookworm AS builder
WORKDIR /app

# Install dependencies required for eBPF (clang, llvm, libbpf)
RUN apt-get update && apt-get install -y \
    clang \
    llvm \
    make \
    libbpf-dev \
    libelf-dev \
    zlib1g-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

RUN ln -s /usr/include/$(uname -m)-linux-gnu/asm /usr/include/asm

RUN rustup component add rustfmt

COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY build.rs ./build.rs

# Build the binary
RUN cargo build --release

# Run Stage
FROM debian:bookworm-slim
WORKDIR /app

# We need libbpf at runtime too
RUN apt-get update && apt-get install -y \
    libbpf-dev \
    libelf-dev \
    zlib1g-dev \
    iproute2 \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/aegis-agent .
CMD ["./aegis-agent"]
